---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import InstallationCardCompact from '../../components/installations/InstallationCardCompact.astro';
import EmptyState from '../../components/ui/EmptyState.astro';
import Button from '../../components/ui/Button.astro';
import Toast from '../../components/ui/Toast.astro';
import StatCard from '../../components/ui/StatCard.astro';
import PushSubscribe from '../../components/notifications/PushSubscribe.astro';
import { getUser } from '../../lib/page-utils';
import {
  getMyStats,
  getTodayInstallations,
  getUpcomingInstallations,
  type InstallerStats,
  type Installation
} from '../../lib/queries/installer';

const user = getUser(Astro);
const accessToken = Astro.cookies.get('sb-access-token')?.value ?? '';

let stats: InstallerStats = { pending: 0, inProgress: 0, completed: 0, todayCount: 0 };
let todayInstallations: Installation[] = [];
let upcomingInstallations: Installation[] = [];
let error: string | null = null;

try {
  [stats, todayInstallations, upcomingInstallations] = await Promise.all([
    getMyStats(accessToken, user.id),
    getTodayInstallations(accessToken, user.id),
    getUpcomingInstallations(accessToken, user.id, 5)
  ]);
} catch (e) {
  error = e instanceof Error ? e.message : 'Error al cargar los datos';
  console.error('Error loading installer dashboard data:', e);
}

function formatGreetingDate(): string {
  const date = new Date();
  const formatted = date.toLocaleDateString('es-ES', {
    weekday: 'long',
    day: 'numeric',
    month: 'long',
    year: 'numeric'
  });
  return formatted.charAt(0).toUpperCase() + formatted.slice(1);
}

function getFirstName(fullName: string): string {
  const parts = fullName.split(' ');
  return parts[0] ?? fullName;
}

const firstName = getFirstName(user.full_name);
const greetingDate = formatGreetingDate();
---

<DashboardLayout title="Dashboard" user={user}>
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
    <p class="text-xl text-gray-700 mt-1">Hola, {firstName}</p>
    <p class="text-gray-600 mt-1">{greetingDate}</p>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <StatCard label="Hoy" value={stats.todayCount} icon="calendar" color="primary" />
    <StatCard label="Pendientes" value={stats.pending} icon="clock" color="yellow" />
    <StatCard label="En Progreso" value={stats.inProgress} icon="bolt" color="blue" />
    <StatCard label="Completadas" value={stats.completed} icon="check" color="green" />
  </div>

  <div class="mb-8">
    <PushSubscribe />
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6 mb-8">
    <h2 class="text-lg font-semibold text-gray-900 mb-6">Instalaciones de Hoy</h2>

    {
      todayInstallations.length === 0 ? (
        <EmptyState
          title="No tienes instalaciones programadas para hoy"
          description="Disfruta tu día libre o revisa las próximas instalaciones."
        />
      ) : (
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          {todayInstallations.map((installation) => (
            <InstallationCardCompact
              installation={installation}
              href={`/installer/installations/${installation.id}`}
              showDate={false}
            />
          ))}
        </div>
      )
    }
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-lg font-semibold text-gray-900">Próximas Instalaciones</h2>
      <Button variant="ghost" size="sm" href="/installer/installations">Ver todas</Button>
    </div>

    {
      upcomingInstallations.length === 0 ? (
        <EmptyState
          title="No tienes instalaciones próximas programadas"
          description="Las nuevas instalaciones aparecerán aquí cuando sean asignadas."
        />
      ) : (
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          {upcomingInstallations.map((installation) => (
            <InstallationCardCompact
              installation={installation}
              href={`/installer/installations/${installation.id}`}
              showDate={true}
            />
          ))}
        </div>
      )
    }
  </div>

  {error && <Toast variant="error" message={error} duration={0} />}
</DashboardLayout>
