---
import DashboardLayout from '../../../layouts/DashboardLayout.astro';
import Badge from '../../../components/ui/Badge.astro';
import { getUser } from '../../../lib/page-utils';
import { getAllUsers, getSingleInstallerStats } from '../../../lib/queries/users';

const user = getUser(Astro);
const accessToken = Astro.cookies.get('sb-access-token')?.value || '';

const allUsers = await getAllUsers(accessToken);

const admins = allUsers.filter((u) => u.role === 'admin');
const installers = allUsers.filter((u) => u.role === 'installer');

const installersWithStats = await Promise.all(
  installers.map(async (installer) => {
    const stats = await getSingleInstallerStats(accessToken, installer.id);
    return { ...installer, stats };
  })
);

function formatDate(dateStr: string): string {
  return new Date(dateStr).toLocaleDateString('es-ES', {
    day: 'numeric',
    month: 'short',
    year: 'numeric'
  });
}

function getInitial(name: string): string {
  return name.charAt(0).toUpperCase();
}
---

<DashboardLayout title="Instaladores" user={user}>
  <div class="mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Equipo</h1>
  </div>

  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-8 flex gap-3">
    <svg
      class="w-5 h-5 text-blue-600 flex-shrink-0 mt-0.5"
      fill="none"
      stroke="currentColor"
      viewBox="0 0 24 24"
    >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
    </svg>
    <div>
      <h3 class="font-medium text-blue-800">¿Cómo añadir nuevos instaladores?</h3>
      <p class="text-sm text-blue-700 mt-1">
        Los nuevos usuarios se crean automáticamente cuando hacen login con Google. Por defecto son
        'installer'. Puedes cambiar su rol desde su perfil.
      </p>
    </div>
  </div>

  <section class="mb-8">
    <h2 class="text-lg font-semibold text-gray-900 mb-4">
      Administradores ({admins.length})
    </h2>
    {
      admins.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {admins.map((admin) => (
            <a
              href={`/admin/installers/${admin.id}`}
              class="bg-white rounded-lg border border-gray-200 p-4 hover:border-primary-300 hover:shadow-sm transition-all"
            >
              <div class="flex items-start gap-3">
                <div class="w-12 h-12 rounded-full bg-purple-100 flex items-center justify-center flex-shrink-0">
                  <span class="text-lg font-semibold text-purple-600">
                    {getInitial(admin.full_name)}
                  </span>
                </div>
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-2 mb-1">
                    <span class="font-medium text-gray-900">{admin.full_name}</span>
                    <Badge variant="purple" size="sm">
                      Admin
                    </Badge>
                  </div>
                  <p class="text-sm text-gray-500 truncate">{admin.email}</p>
                  {admin.id === user.id && (
                    <span class="inline-block text-xs text-primary-600 font-medium mt-1">Tú</span>
                  )}
                </div>
              </div>
            </a>
          ))}
        </div>
      ) : (
        <p class="text-gray-500">No hay administradores</p>
      )
    }
  </section>

  <section>
    <h2 class="text-lg font-semibold text-gray-900 mb-4">
      Instaladores ({installers.length})
    </h2>
    {
      installersWithStats.length > 0 ? (
        <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead class="bg-gray-50 border-b border-gray-200">
                <tr>
                  <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Instalador
                  </th>
                  <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Contacto
                  </th>
                  <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Pendientes
                  </th>
                  <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                    En Progreso
                  </th>
                  <th class="px-4 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Completadas
                  </th>
                  <th class="px-4 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Desde
                  </th>
                  <th class="px-4 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Acciones
                  </th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200">
                {installersWithStats.map((installer) => (
                  <tr class="hover:bg-gray-50">
                    <td class="px-4 py-4">
                      <div class="flex items-center gap-3">
                        <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center flex-shrink-0">
                          <span class="text-sm font-semibold text-blue-600">
                            {getInitial(installer.full_name)}
                          </span>
                        </div>
                        <div>
                          <div class="font-medium text-gray-900">{installer.full_name}</div>
                          <div class="text-sm text-gray-500">{installer.email}</div>
                        </div>
                      </div>
                    </td>
                    <td class="px-4 py-4 text-sm text-gray-600">{installer.phone_number || '-'}</td>
                    <td class="px-4 py-4 text-center">
                      <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-yellow-100 text-yellow-700 text-sm font-semibold">
                        {installer.stats.pending}
                      </span>
                    </td>
                    <td class="px-4 py-4 text-center">
                      <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-blue-100 text-blue-700 text-sm font-semibold">
                        {installer.stats.inProgress}
                      </span>
                    </td>
                    <td class="px-4 py-4 text-center">
                      <span class="inline-flex items-center justify-center w-8 h-8 rounded-full bg-green-100 text-green-700 text-sm font-semibold">
                        {installer.stats.completed}
                      </span>
                    </td>
                    <td class="px-4 py-4 text-sm text-gray-600">
                      {formatDate(installer.created_at)}
                    </td>
                    <td class="px-4 py-4 text-right">
                      <a
                        href={`/admin/installers/${installer.id}`}
                        class="text-primary-600 hover:text-primary-700 text-sm font-medium"
                      >
                        Ver perfil
                      </a>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>
      ) : (
        <div class="bg-white rounded-lg border border-gray-200 p-12 text-center">
          <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg
              class="w-8 h-8 text-gray-400"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
              />
            </svg>
          </div>
          <h3 class="text-lg font-medium text-gray-900 mb-1">No hay instaladores</h3>
          <p class="text-gray-500">
            Los instaladores aparecerán aquí cuando hagan login con Google.
          </p>
        </div>
      )
    }
  </section>
</DashboardLayout>
