---
import DashboardLayout from '../../layouts/DashboardLayout.astro';
import InstallationCardCompact from '../../components/installations/InstallationCardCompact.astro';
import EmptyState from '../../components/ui/EmptyState.astro';
import Button from '../../components/ui/Button.astro';
import Toast from '../../components/ui/Toast.astro';
import StatCard from '../../components/ui/StatCard.astro';
import { getUser } from '../../lib/page-utils';
import { getInstallationStats, getUpcomingInstallations } from '../../lib/queries/installations';
import { getUsersCount } from '../../lib/queries/users';

const user = getUser(Astro);

let stats = { total: 0, pending: 0, inProgress: 0, completed: 0, cancelled: 0 };
let upcomingInstallations: Awaited<ReturnType<typeof getUpcomingInstallations>> = [];
let usersCount = { installers: 0, admins: 0 };
let error: string | null = null;

try {
  [stats, upcomingInstallations, usersCount] = await Promise.all([
    getInstallationStats(),
    getUpcomingInstallations(5),
    getUsersCount()
  ]);
} catch (e) {
  error = e instanceof Error ? e.message : 'Error al cargar los datos';
  console.error('Error loading dashboard data:', e);
}
---

<DashboardLayout title="Dashboard" user={user}>
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-900">Dashboard</h1>
    <p class="text-gray-600 mt-1">Bienvenido de nuevo, {user.full_name}</p>
  </div>

  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
    <StatCard label="Total Instalaciones" value={stats.total} icon="clipboard" color="blue" />
    <StatCard label="Pendientes" value={stats.pending} icon="clock" color="yellow" />
    <StatCard label="Completadas" value={stats.completed} icon="check" color="green" />
    <StatCard label="Instaladores" value={usersCount.installers} icon="users" color="purple" />
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-6">
    <div class="flex items-center justify-between mb-6">
      <h2 class="text-lg font-semibold text-gray-900">Pr贸ximas Instalaciones</h2>
      <Button variant="ghost" size="sm" href="/admin/installations">Ver todas</Button>
    </div>

    {
      upcomingInstallations.length === 0 ? (
        <EmptyState
          title="No hay instalaciones pr贸ximas"
          description="Crea una nueva instalaci贸n para comenzar."
        >
          <Button variant="primary" href="/admin/installations/new">
            Nueva Instalaci贸n
          </Button>
        </EmptyState>
      ) : (
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          {upcomingInstallations.map((installation) => (
            <InstallationCardCompact
              installation={installation}
              href={`/admin/installations/${installation.id}`}
              showDate={true}
            />
          ))}
        </div>
      )
    }
  </div>

  {error && <Toast variant="error" message={error} duration={0} />}
</DashboardLayout>
