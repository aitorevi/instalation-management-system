---
import StatusBadge from './StatusBadge.astro';
import Badge from '../ui/Badge.astro';
import type { Installation } from '../../lib/queries/installer';

interface Props {
  installation: Installation;
  href?: string;
  showDate?: boolean;
}

const { installation, href, showDate = false } = Astro.props;

function formatTime(dateString: string | null): string {
  if (!dateString) return 'Sin hora';

  const date = new Date(dateString);
  return date.toLocaleTimeString('es-ES', { hour: '2-digit', minute: '2-digit' });
}

function formatDate(dateString: string | null): string {
  if (!dateString) return 'Sin fecha';

  const date = new Date(dateString);
  return date.toLocaleDateString('es-ES', { day: '2-digit', month: '2-digit', year: 'numeric' });
}

const time = formatTime(installation.scheduled_date);
const date = showDate ? formatDate(installation.scheduled_date) : null;
const ariaLabel = `Ver instalaci√≥n de ${installation.client_name}`;
---

{
  href ? (
    <a
      href={href}
      class="block bg-white rounded-lg border border-gray-200 p-4 hover:shadow-md transition-shadow focus:outline-none focus:ring-2 focus:ring-primary-500"
      aria-label={ariaLabel}
    >
      <div class="space-y-2">
        <div class="flex items-center gap-2">
          <span class="text-sm font-bold text-gray-900">{time}</span>
          {date && <span class="text-sm text-gray-500">{date}</span>}
        </div>

        <h3 class="text-lg font-semibold text-gray-900">{installation.client_name}</h3>

        <div class="flex items-start gap-2 text-sm text-gray-600">
          <svg
            class="w-4 h-4 text-gray-400 mt-0.5 flex-shrink-0"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            />
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
            />
          </svg>
          <span class="line-clamp-2">{installation.address}</span>
        </div>

        <div class="flex items-center justify-end">
          <StatusBadge status={installation.status} size="sm" />
        </div>

        {installation.client_phone && (
          <div class="flex items-center gap-2 text-sm text-gray-600">
            <svg
              class="w-4 h-4 text-gray-400 flex-shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              />
            </svg>
            <span>{installation.client_phone}</span>
          </div>
        )}

        {installation.collect_payment && (
          <div class="pt-2">
            <Badge variant="yellow" size="sm">
              Cobro pendiente
            </Badge>
          </div>
        )}
      </div>
    </a>
  ) : (
    <div class="bg-white rounded-lg border border-gray-200 p-4">
      <div class="space-y-2">
        <div class="flex items-center gap-2">
          <span class="text-sm font-bold text-gray-900">{time}</span>
          {date && <span class="text-sm text-gray-500">{date}</span>}
        </div>

        <h3 class="text-lg font-semibold text-gray-900">{installation.client_name}</h3>

        <div class="flex items-start gap-2 text-sm text-gray-600">
          <svg
            class="w-4 h-4 text-gray-400 mt-0.5 flex-shrink-0"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            />
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
            />
          </svg>
          <span class="line-clamp-2">{installation.address}</span>
        </div>

        <div class="flex items-center justify-end">
          <StatusBadge status={installation.status} size="sm" />
        </div>

        {installation.client_phone && (
          <div class="flex items-center gap-2 text-sm text-gray-600">
            <svg
              class="w-4 h-4 text-gray-400 flex-shrink-0"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
              />
            </svg>
            <span>{installation.client_phone}</span>
          </div>
        )}

        {installation.collect_payment && (
          <div class="pt-2">
            <Badge variant="yellow" size="sm">
              Cobro pendiente
            </Badge>
          </div>
        )}
      </div>
    </div>
  )
}
